{
  "compilerOptions": {
    "target": "ES2020",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "jest.setup.ts",
    "jessica.ts",
    "jest.d.ts"
  ],
  "exclude": [
    "tests",
    "node_modules"
  ]
}